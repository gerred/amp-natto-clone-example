{
  "name": "@nodeflow/widgets",
  "version": "0.1.0",
  "description": "Live widgets for Node Flow with real-time data streaming",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rxjs": "^7.8.1",
    "recharts": "^2.13.3",
    "react-virtualized": "^9.22.5",
    "react-window": "^1.8.8",
    "lodash": "^4.17.21",
    "d3-scale": "^4.0.2",
    "d3-array": "^3.2.4"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/lodash": "^4.17.13",
    "@types/react-virtualized": "^9.21.30",
    "@types/react-window": "^1.8.8",
    "@types/d3-scale": "^4.0.8",
    "@types/d3-array": "^3.2.1",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "jsdom": "^25.0.1",
    "vite-plugin-dts": "^4.3.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
