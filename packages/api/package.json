{
  "name": "@nodeflow/api",
  "version": "0.1.0",
  "description": "Node Flow API and GraphQL schema definitions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "graphql": "^16.9.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.3",
    "vite-plugin-dts": "^4.3.0"
  }
}
